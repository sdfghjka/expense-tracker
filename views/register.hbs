<html>
  <head>
    <meta charset="utf-8" />
    <title>Register</title>
    <link href="/stylesheets/bootstrap.css" rel="stylesheet" />
    <link rel="stylesheet" type="text/css" href="/stylesheets/index.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.8.1/css/all.min.css" />
  </head>
  
  <div class="container login-container">
    <div class="login-form">
      <h2 class="text-center">Register</h2>
      {{> messages}}
      <p class="text-center text-muted"></p>
      <form action="/user/register" method="POST">
        <div class="mb-3">
          <label for="name" class="form-label">Full Name</label>
          <input type="text" class="form-control" id="name" name="name" placeholder="Enter your full name" required />
        </div>
        <div class="mb-3">
          <label for="email" class="form-label">Email</label>
          <input type="email" class="form-control" id="email" name="email" placeholder="Enter your email" required />
        </div>
        <div class="mb-3">
          <label for="password" class="form-label">Password</label>
          <input type="password" class="form-control" id="password" name="password" placeholder="Enter your password" required />
        </div>
        <div class="mb-3">
          <label for="password" class="form-label">Password Check</label>
          <input type="password" class="form-control" id="passwordCheck" name="passwordCheck" placeholder="Password Check" required />
        </div>
        <button type="submit" class="btn btn-primary w-100">Register</button>
        <hr />
      </form>
      <a href="/user/login"><button class="btn btn-outline-info w-100 my-2">Back to Login</button></a>
    </div>
    <div class="login-img"></div>
  </div>
  
  <style>
    .login-container {
      max-width: 1000px;
      margin: auto;
      display: flex;
      height: 90vh;
      align-items: center;
      justify-content: center;
    }
    .login-form {
      width: 40%;
      padding: 3rem;
      background: white;
      border-radius: 10px;
      box-shadow: 0px 0px 15px rgba(0, 0, 0, 0.1);
    }
    .login-img {
      width: 60%;
      height: 85vh;
      background: url('/images/2024.png') no-repeat center center;
      background-size: cover;
      border-radius: 10px;
    }
  </style>
  
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js"></script>
</html>